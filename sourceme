module purge
ulimit -s unlimited
export OMP_STACKSIZE="256m"
export FCver=2020
export MPIver=2020
export NC=4.6.1

module load intel/${FCver}
module load impi/${MPIver}
module load netcdf/${NC}

export FC=mpiifort
export CC=mpiicc
export CXX=mpicpc

export CPPFLAGS="-DINTERNAL_FILE_NML"
export FCFLAGS="-O0 -g -trackback -fno-alias -auto -safe-cray-ptr -ftz -assume byterecl -i4 -nowarn `nf-config --fflags`"
export CFLAGS="-O0 -sox -qopenmp -debug minimal `nc-config --cflags`"
